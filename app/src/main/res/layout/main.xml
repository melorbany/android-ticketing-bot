<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/ncActLayout"
        android:layout_weight="1">


        <TextView
            android:id="@+id/txtPercentage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textColor="@color/txt_font"
            android:textSize="20dp"
            />

    </LinearLayout>


    <LinearLayout
        style="@style/ncActLayout"
        android:layout_weight="2">

    <ImageButton
        android:id="@+id/recordButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/record"
        android:onClick="record"
        android:src="@drawable/ic_btn_speak_now" />

    <ImageButton
        android:id="@+id/stopButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/stop"
        android:onClick="stop"
        android:src="@drawable/ic_media_stop" />

    <ImageButton
        android:id="@+id/playButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/play"
        android:onClick="play"
        android:src="@drawable/ic_media_play" />
    
   <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/delete"
        android:onClick="delete"
        android:src="@drawable/ic_delete" />

    </LinearLayout>


    <LinearLayout
        style="@style/ncActLayout"
        android:orientation="vertical"
        android:layout_weight="6">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Complain Description"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textColor="@color/txt_font"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText

            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="6"
            android:lines="6"
            android:textColor="@color/txt_font"
            />

    </LinearLayout>





    <LinearLayout
        style="@style/ncActLayout"
        android:layout_weight="1">

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/btn_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="1"
        android:text="Send"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>

    </LinearLayout>






</LinearLayout>